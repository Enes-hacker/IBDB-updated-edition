@model IEnumerable<BOOK_LIBRARY.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2>Authors</h2>

<button style="background-color:blue">

    @Html.ActionLink("Create New", "Create")


</button>


@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e6/Victor_Hugo_by_%C3%89tienne_Carjat_1876_-_full.jpg/1200px-Victor_Hugo_by_%C3%89tienne_Carjat_1876_-_full.jpg" height="200" , width="200">
    <img src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/gettyimages-56217307-1505486388.jpg" height="200" , width="200">
    <img src="https://iasbh.tmgrup.com.tr/79d750/366/218/61/0/880/487?u=https://isbh.tmgrup.com.tr/sbh/2018/02/07/mehmet-akif-ersoy-kimdir-1518003397891.jpg" height="200" , width="200">
    <img src="https://mysofia.bg/wp-content/uploads/2020/07/ivan-vazov.jpg" height="200" , width="200">
    <img src="https://www.biography.com/.image/t_share/MTc5OTk0MzEyNzMyMzIwODkw/mark-twain-and-ulysses-s-grant.jpg" height="200" , width="200">
    <img src="https://listelist.com/wp-content/uploads/2014/10/rifat-ilgaz-kimdir.jpeg" height="200" , width="200">
}
<table class="table">

    <tr>
        <th>
            @Html.ActionLink("AuthorName", "Index", new { sortOrder = ViewBag.AuthorNameSortParm, Filter_Value = ViewBag.FilterValue })
        </th>
        <th>
            First Name
        </th>
        <th>
            @Html.ActionLink("AuthorNationality", "Index", new { sortOrder = ViewBag.AuthorNationalitySortParm, Filter_Value = ViewBag.FilterValue })
        </th>
        <th></th>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author_Nationality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthyear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quotes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biography)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author_Nationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthyear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

