@model IEnumerable<BOOK_LIBRARY.Models.Review>

@{
    ViewBag.Title = "Book Reviews";
}

<h2>Book Reviews</h2>

<button style="background-color:aqua">
    @Html.ActionLink("Create New", "Create")
</button>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString" ,ViewBag.CurrentFilter as string))
        <input type="submit" value="Search" />
    </p>
}
<table class="table">

    <tr>
        <th>
            @Html.ActionLink("UserName", "Index", new { sortOrder = ViewBag.AuthorNameSortParm })
        </th>
        <th>
            First Name
        </th>
        <th>
            @Html.ActionLink("Published", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th></th>
    </tr>

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Updated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Read)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Read)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


