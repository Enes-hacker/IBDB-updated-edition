                <li>@Html.ActionLink("About", "About", "Home", new { area = " " }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = " " }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Book_Info", "Index", "Book_Info", new { area = " " }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Authors", "Index", "Authors", new { area = " " }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Reviews", "Index", "Reviews", new { area = " " }, new { @class = "navbar-brand" })</li>
               
            </ul>
        </div>
    </nav>
