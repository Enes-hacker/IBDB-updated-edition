@model IEnumerable<BOOK_LIBRARY.Models.Book_Info>

@{
    ViewBag.Title = "Index";
}

<h2>Books</h2>

<button style="background-color:blueviolet">
    @Html.ActionLink("Create New", "Create")
</button>
@using (Html.BeginForm("Index", "Book_Info", FormMethod.Get))
{


    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}

<img src="https://pic.soundofmusic-shop.de/Book-LES-MIS-RABLES-From-Page-To-Stage-To-Screen-Benedict-Nightingale-.97993a.jpg" height="200" , width="200">
<img src="https://images-na.ssl-images-amazon.com/images/I/71Yl9WYd4+S.jpg" height="200" , width="200">
<img src="https://www.book.store.bg/lrgimg/17334/pod-igoto.jpg" height="200" , width="200">
<img src="https://static.nadirkitap.com/fotograf/37618/12/Kitap_20190202130736_37618_5.jpg" height="200" , width="200">
<img src="https://cdn.cimri.io/image/1000x1000/postermanyastiklalmarxcmposter_235182697.jpg" height="200" , width="200">

<table class="table">

    <tr>
        <th>
            @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.NameSortParm, Filter_Value = ViewBag.FilterValue })
        </th>
        <th>
            Author
        </th>
        <th>
            @Html.ActionLink("genre", "Index", new { sortOrder = ViewBag.DateSortParm, Filter_Value = ViewBag.FilterValue })
        </th>
        <th></th>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.page)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.page)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
